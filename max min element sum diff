#include<iostream>
using namespace std;
int main()
{
	int a[100],n,i,l,s,sum,diff;
	cin>>n;
	for(i=0;i<n;i++)
	cin>>a[i];
	l=a[0];
	for(i=0;i<n;i++)
	{
		if(l<a[i])
		l=a[i];
	}
	s=a[0];
	for(i=0;i<n;i++)
	{
		if(s>a[i])
		s=a[i];
	}
	cout<<"\nmax no"<<l;
	cout<<"\nmin no"<<s;
	sum=l+s;
	cout<<"\nsum="<<sum;
	diff=l-s;
	cout<<"\ndifference="<<diff;
	return 0;
}
